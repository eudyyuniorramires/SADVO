@using SADVO.Core.Application.ViewModels.UsuarioViewModel;
@model List<UsuarioViewModel>;
@{
    ViewData["Title"] = "Usuario";
}

<div class="row">
    <div class="col">
        <div class="text-center">
            <h1 class="display-4"> Registros de Usuarios</h1>
        </div>
    </div>
</div>

<div class="row">
    <a class="btn btn-outline-success" asp-controller="Usuario" asp-action="Create"><i class="bi bi-file-earmark-plus"></i> Nuevo Partido +</a>
</div>

<div class="row mt-2">
    @if (Model.Count == 0)
    {
        <div class="text-center">
            <h4 class="display-4">No hay Usuarios registrados</h4>
        </div>
    }
    else
    {
        foreach (var item in Model)
        {
            <div class="col-12 col-md-3">
                <div class="card border-dark" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Nombre</h5>

                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Apellido: @item.Apellido</li>
                        <li class="list-group-item">Email: @item.Email</li>
                        <li class="list-group-item">Rol: @item.Rol</li>


                        <li class="list-group-item">
                            Activo:
                            <span class="badge @(item.EstaActivo ? "bg-primary" : "bg-danger") text-white px-3 py-2 rounded-pill" style="opacity: 0.85;">
                                @(item.EstaActivo ? "Sí" : "No")
                            </span>
                        </li>




                    </ul>
                    <div class="card-body d-flex justify-content-between">
                        <a class="btn btn-outline-success" asp-controller="Usuario" asp-action="Activar" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Activar</a>
                        <a class="btn btn-outline-warning" asp-controller="Usuario" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Editar</a>
                        <a class="btn btn-outline-danger " asp-controller="Usuario" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Eliminar</a>
                    </div>
                </div>


            </div>
        }
    }
