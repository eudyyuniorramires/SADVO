@using SADVO.Core.Application.ViewModels.PuestoElectivoViewMode;
@model List<PuestoElectivoViewModel>;
@{
    ViewData["Title"] = "Puesto Electivo Inicio";
}

<div class="row">
    <div class="text-center">
        <h1 class="display-4">Puesto Electivo</h1>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12 col-md-3">
        <a class="btn btn-outline-success" asp-controller="PuestoElectivo" asp-action="Create"><i class="bi bi-file-earmark-plus"></i> Nuevo Puesto Electivo</a>
    </div>

</div>

<div class="row mt-2">
    @if (Model.Count == 0)
    {
        <div class="text-center">
            <h4 class="display-4">No hay Puesto Electivo</h4>
        </div>
    }
    else
    {
        foreach (var item in Model)
        {
            <div class="col-12 col-md-3">
                <div class="card bg-gradient" color="Blue">
                    <div class="card-body">
                        <h5 class="card-title">Partido:@item.Nombre</h5>
                        <h6 class="card-subtitle">Descipcion: @item.Descripcion</h6>
                        <p class="card-text mt-2">
                           Activo: @item.EstadoActivo
                        </p>
                        <div class="mt-2 d-flex justify-content-between">
                            <a class="btn btn-outline-success" asp-controller="PuestoElectivo" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Activar</a>
                            <a class="btn btn-outline-warning" asp-controller="PuestoElectivo" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Editar</a>
                            <a class="btn btn-outline-danger " asp-controller="PuestoElectivo" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Eliminar</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>



