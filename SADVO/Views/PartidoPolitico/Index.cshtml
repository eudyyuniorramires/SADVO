@using SADVO.Core.Application.ViewModels.PartidoPoliticoViewModel;
@model List<PartidoPoliticoViewModel>;
@{
    ViewData["Title"] = "Partido Politico";
}

<div class="row">
    <div class="col">
        <div class="text-center">
            <h1 class="display-4"> Registros de Partidos Politicos</h1>
        </div>
    </div>
</div>

<div class="row">
    <a class="btn btn-outline-success" asp-controller="PartidoPolitico" asp-action="Create"><i class="bi bi-file-earmark-plus"></i> Nuevo Partido +</a>
</div>

<div class="row mt-2">
    @if (Model.Count == 0)
    {
        <div class="text-center">
            <h4 class="display-4">No hay partido politico</h4>
        </div>
    }
    else
    {
        foreach (var item in Model)
        {
            <div class="col-12 col-md-3">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="https://th.bing.com/th/id/OIP.jqytdbUiMIcNmbJZBMSXWAHaD4?w=345&h=180&c=7&r=0&o=7&pid=1.7&rm=3" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.Siglas</h5>

                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Nombre: @item.Nombre</li>
                        <li class="list-group-item">Descripcion: @item.Descripcion</li>
                        <li class="list-group-item">
                            Activo:
                            <span class="badge @(item.EstaActivo ? "bg-primary" : "bg-danger") text-white px-3 py-2 rounded-pill" style="opacity: 0.85;">
                                @(item.EstaActivo ? "Sí" : "No")
                            </span>
                        </li>




                    </ul>
                    <div class="card-body d-flex justify-content-between">
                        <a class="btn btn-outline-success" asp-controller="PartidoPolitico" asp-action="Activar" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Activar</a>
                        <a class="btn btn-outline-warning" asp-controller="PartidoPolitico" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Editar</a>
                        <a class="btn btn-outline-danger " asp-controller="PartidoPolitico" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i> Eliminar</a>
                    </div>
                </div>


            </div>
        }
    }
