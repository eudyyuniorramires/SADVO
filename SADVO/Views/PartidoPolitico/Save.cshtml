@using SADVO.Core.Application.ViewModels.PartidoPoliticoViewModel;
@model PartidoPoliticoSaveViewModel;
@{
    bool editeMode = ViewBag.EditMode ?? false;
    ViewData["Title"] = "Partido Politico Guardar";
}

<div class="col-12 col-md-6 offset-md-3 ">
    <div class="card">
        <div class="card-header bg-success text-light"><h5 class="text-center">@(editeMode ? "Edit - " + Model.Nombre : "Agregar Partido Politico + ")</h5></div>
        <div class="card-body">
            <form asp-controller="PartidoPolitico" asp-action="@(editeMode ? "Edit" : "Create")" method="POST">
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre:</label>
                    <input class="form-control" asp-for="Nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label">Descripcion:</label>
                    <textarea class="form-control" asp-for="Descripcion"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Siglas" class="form-label">Siglas:</label>
                    <textarea class="form-control" asp-for="Siglas"></textarea>
                    <span asp-validation-for="Siglas" class="text-danger"></span>
                </div>


                <div class="mb-3">
                    <label asp-for="LogoPath" class="form-label">Logo:</label>
                    <textarea class="form-control" asp-for="LogoPath"></textarea>
                    <span asp-validation-for="LogoPath" class="text-danger"></span>
                </div>



                <div class="mb-3">
                    <div class="form-check">
                        <input asp-for="EstaActivo" class="form-check-input" type="checkbox" />
                        <label asp-for="EstaActivo" class="form-check-label">Activo</label>
                        <span asp-validation-for="EstaActivo" class="text-danger"></span>
                    </div>
                </div>

                <div>
                    <button type="submit" class="btn btn-outline-primary float-end"><i class="bi bi-floppy2"></i> Guardar</button>
                    <a asp-controller="PartidoPolitico" asp-action="Index" class="btn btn-outline-warning float-end me-2"><i class="bi bi-arrow-left-short"></i> Regresar</a>
                </div>

            </form>
        </div>
    </div>
</div>
